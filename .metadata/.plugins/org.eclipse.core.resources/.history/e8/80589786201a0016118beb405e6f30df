#include <stdio.h>
#include <stdlib.h>
#include <math.h>
#include <string.h>

typedef struct soldado SLista;
struct soldado {
	char nomeSoldado[15];
	int numero;
	SLista* proximo;
};

insereSoldadoNoCirc(int num, SLista* lista);

int main(void) {

	/*
	 * Incializa-se a lista.
	 */
	SLista* circuloSoldados = NULL;

	/*
	 * Entrada de Dados:
	 * Pede ao usuário que informe um número num de soldados a serem inseridos na lista.
	 */

	int numSoldados = 0;
	do {
		printf("O Problema de Josephus\n\nNúmero de soldados entre 1 e 50:");
		scanf("%d", &numSoldados);
	} while ( numSoldados < 1 || numSoldados > 50 );

	/*
	 * Cria uma matriz com o número de soldados a serem inseridos na lista
	 */
	char nomes[50][15] = { "João", "Arthur", "Davi", "Joaquim", "Eduardo", "Gabriel", "Pedro", "Guilherme", "Gustavo", "Benjamin",
			"Henrique", "José", "Marcos", "Matheus", "Miguel", "Victor", "William", "Lucas", "Raphael", "Samuel",
			"Antônio", "Nícolas", "Daniel", "André", "Fernando", "Marcos", "Emanuel", "Giovane", "Roberto", "Márcio",
			"César", "Moisés", "Sérgio", "Bernardo", "Júnior", "Julio", "Alessandro", "Afonso", "Alexandre", "Claudio",
			"Carlos", "Felipe", "Geraldo", "Marcelo", "Paulo", "Ricardo", "Vinícius", "Adolfo", "Lúcio", "Xulambs" };
	char soldados[numSoldados][15];
	int i = 0;
	do {
		soldados[i][15] = nomes[i][15];
		printf("%c, ", soldados[i][15]);
		i++;
	} while ( i < numSoldados );

	// Insere esse numero de soldados na lista
	insereSoldadoNoCirc(numSoldados, circuloSoldados);

	/*
	 * Fim do programa.
	 */
	return EXIT_SUCCESS;
}

/*
 * Função: Inicializa a lista circular.
 */
int SLista* inicializando() {
	return NULL;
}


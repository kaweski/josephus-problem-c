#include <stdio.h>
#include <stdlib.h>
#include <math.h>
#include <string.h>

typedef struct soldado SLista;
struct soldado {
	int numero;
	SLista* proximo;
};

insereSoldadoNoCirc(int num, SLista* lista);

int main(void) {

	/*
	 * Começa o jogo, abrinco o círculo de soldados, inicializando a lista com NULL.
	 */
	SLista* circuloSoldados = queComeceOJogo();

	/*
	 * Entrada de Dados:
	 * Pede ao usuário que informe um número num de soldados a serem inseridos na lista.
	 */

	int numSoldados = 0;
	printf("O Problema de Josephus\n\nNúmero de soldados utilizados:");
	scanf("%d", &numSoldados);

	/*
	 * Chamada de urgência dos soldados ao círculo, quantos soldados são necessários para o jogo.
	 */
	char soldados[numSoldados];

	insereSoldadoNoCirc(numSoldados, circuloSoldados);

	return 0;
}

/*
 * Função: Inicializa a lista circular.
 */
SLista* queComeceOJogo() {
	return NULL;
}

/*
 * Return
 * Param
 */

SLista* insereSoldadoNoCirc(int num, SLista* lista) {
	return lista;
}

